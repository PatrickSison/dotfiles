{
	"layer": "top",
	"modules-left": [
		"hyprland/workspaces",
		"hyprland/submap"
	],
	"modules-center": [
		"wlr/taskbar"
	],
	"modules-right": [
		"load",
		"temperature",
		"pulseaudio",
		"battery",
		"clock"
	],
	"sway/window": {
		"max-length": 50
	},
	"battery": {
		"format": "{capacity}% {icon}",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		]
	},
	"clock": {
		"format-alt": "{:%a, %d. %b  %H:%M}"
	}
}
